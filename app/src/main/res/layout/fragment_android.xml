<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AndroidFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/sky"
            android:layout_weight="0.61"
            android:background="@color/blue_sky">

            <ImageView
                android:id="@+id/sun"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/sun"
                android:translationY="800px"
                android:translationX="-700px"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.29"
            android:background="@color/ground"/>
    </LinearLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/cloud"
        android:translationX="-50dp"
        android:translationY="-45dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/cloud"
        android:layout_alignParentRight="true"
        android:translationX="60dp"/>

    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/tree"
        android:translationX="-165dp"
        android:translationY="0dp" />

    <ImageView
        android:id="@+id/title"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/title"
        android:layout_centerHorizontal="true"
        android:alpha="0"/>

    <ImageView
        android:id="@+id/grass_6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/grass2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:translationY="120dp"
        android:translationX="5dp"/>

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/android"
        android:layout_centerInParent="true"
        android:translationY="100dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/head"
            android:id="@+id/head"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/body"
            android:id="@+id/body"/>

        <ImageView
            android:id="@+id/arm_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/arm_right" />

        <ImageView
            android:id="@+id/arm_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/arm_left" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/grass_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/grass2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:translationY="170dp"
        android:translationX="-5dp"/>

    <ImageView
        android:id="@+id/grass_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/grass2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:translationY="220dp"
        android:translationX="5dp"/>

    <ImageView
        android:id="@+id/grass_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/grass"
        android:translationX="-5dp"
        android:translationY="270dp" />

    <ImageView
        android:id="@+id/scythe"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/scythe"
        android:layout_centerInParent="true"
        android:translationY="220dp"
        android:translationX="-30dp"/>

    <ImageView
        android:id="@+id/grass_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/grass2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:translationY="320dp"
        android:translationX="5dp"/>

    <ImageView
        android:id="@+id/grass_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/grass"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:translationY="370dp"
        android:translationX="-5dp"/>

</RelativeLayout>